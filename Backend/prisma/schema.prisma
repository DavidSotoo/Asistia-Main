// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String
  email     String?
  role      String   @default("operador")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relación con materias (maestro puede tener múltiples materias)
  subjects Subject[]

  @@map("users")
}

model Student {
  id        String   @id
  nombre    String
  apellido  String
  matricula String? @unique
  photoUrl  String?
  grupo     String?
  email     String?
  telefono  String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relación con asistencia
  attendance Attendance[]

  @@map("students")
}

model Attendance {
  id             String   @id @default(uuid())
  studentId      String   @map("student_id")
  status         String   @default("Ausente")
  attendanceDate DateTime @default(now()) @map("attendance_date") @db.Date
  attendanceTime DateTime @default(now()) @map("attendance_time")
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")

  // Relación con estudiante
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("attendance")
}

model Subject {
  id          String    @id @default(uuid())
  name        String
  code        String?   @unique
  description String?
  teacherId   String    @map("teacher_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relaciones
  teacher  User      @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  schedules Schedule[]

  @@map("subjects")
}

model Schedule {
  id        String   @id @default(uuid())
  subjectId String   @map("subject_id")
  dayOfWeek Int      // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  startTime String   // Formato HH:MM (ej: "08:00")
  endTime   String   // Formato HH:MM (ej: "10:00")
  classroom String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relación con materia
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@map("schedules")
}